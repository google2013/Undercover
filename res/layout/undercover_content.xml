<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fath"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_bg" />

    <LinearLayout
        android:id="@+id/tem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal" >

           <Button
               android:id="@+id/btnfb"
               android:layout_width="75dp"
               android:layout_height="30dp"
               android:background="@drawable/pinkbtn1"
               android:text="@string/feedback"
               android:textColor="@color/WRITE" />

        <Button
            android:id="@+id/btnweixin"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:background="@drawable/pinkbtn1"
            android:textColor="@color/WRITE"
            android:text="@string/strToWeixin" />
        
        <Button
            android:id="@+id/btnyonghu"
           android:layout_width="75dp"
               android:layout_height="30dp"
               android:textColor="@color/WRITE"
               android:text="@string/usercontribution" 
               android:background="@drawable/pinkbtn1"/>
        
        <Button
            android:id="@+id/btnguanyu"
            android:layout_width="75dp"
               android:layout_height="30dp"
               android:textColor="@color/WRITE"
               android:text="@string/strAbout" 
               android:background="@drawable/pinkbtn1" />
    </LinearLayout>

</RelativeLayout>