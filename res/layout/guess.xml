<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentTable"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/mainbg"  >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/guesscontent"
        android:textSize="@dimen/size20" />

    <TableLayout
        android:id="@+id/tableContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </TableLayout>

    <TableLayout
        android:id="@+id/btn_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:visibility="invisible" >

        <Button
            android:id="@+id/btn_punish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/btnbg"
            android:text="@string/punishmen" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <Button
                android:id="@+id/btn_restart"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btnbg"
                android:text="@string/restart" />

            <Button
                android:id="@+id/btn_quickstart"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btnbg"
                android:text="@string/quickStart" />

        </TableRow>

    </TableLayout>

</TableLayout>