<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_bg" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="15dp"
                android:text="@string/textPeople"
                android:textSize="@dimen/index" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:id="@+id/btnCost"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/cerpink01" />

                <TextView
                    android:id="@+id/txtcost1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/cost"
                    android:textColor="@color/WRITE"
                    android:textSize="@dimen/index" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="30" >

                <ImageView
                    android:id="@+id/imageViewAddBg"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/pinkbtn1" />

                <TextView
                    android:id="@+id/txtPeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/WRITE"
                    android:textSize="@dimen/index" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:id="@+id/btnAdd"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/cerpink01" />

                <TextView
                    android:id="@+id/txtadd1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/add"
                    android:textColor="@color/WRITE"
                    android:textSize="@dimen/index" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txtPeopleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="15dp"
                android:text="@string/txtUndex"
                android:textSize="@dimen/index" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:id="@+id/btnCostUnder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/cerpink01" />

                <TextView
                    android:id="@+id/txtcost2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/cost"
                    android:textColor="@color/WRITE"
                    android:textSize="@dimen/index" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="30" >

                <ImageView
                    android:id="@+id/imageViewUnderBg"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/pinkbtn1" />

                <TextView
                    android:id="@+id/txtUnder"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/WRITE"
                    android:textSize="@dimen/index" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <ImageView
                    android:id="@+id/btnAddUnder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/cerpink01" />

                <TextView
                    android:id="@+id/txtadd2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/add"
                    android:textColor="@color/WRITE"
                    android:textSize="@dimen/index" />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip" />
    </LinearLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/LinearLayout1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/greenbtn1"
        android:text="@string/strBgn"
        android:textColor="@color/WRITE"
        android:textSize="@dimen/index" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStart"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/afterShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/setting_afterShow" />

        <CheckBox
            android:id="@+id/isBlank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_blank" />

        <LinearLayout
            android:id="@+id/warp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/te"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/popo_button"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/greenbtn1"
                    android:text="@string/setting_word"
                    android:textColor="@color/WRITE" />

                <Button
                    android:id="@+id/popo_wordsetting"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/greenbtn1"
                    android:text="设置分类"
                    android:textColor="@color/WRITE" />
            </LinearLayout>

            <TextView
                android:id="@+id/wordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>