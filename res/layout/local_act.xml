<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/shake" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="193dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_purple_pressed"
        android:text="@string/下一条"
        android:textColor="@color/WRITE"
        android:textSize="@dimen/newBtnFont" />

    <Button
        android:id="@+id/btnShare"
        android:layout_width="193dp"
        android:layout_height="49dp"
        android:layout_above="@+id/btnNext"
        android:layout_alignLeft="@+id/btnNext"
        android:layout_marginBottom="18dp"
        android:background="@drawable/begin_pressed"
        android:text="@string/分享"
        android:textColor="@color/WRITE"
        android:textSize="@dimen/newBtnFont" />

    <ProgressBar
        android:id="@+id/proBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/ddd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:maxLines="@integer/lines"
            android:text="动作描述"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gamered2"
            android:textSize="@dimen/btn_font_size" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="的/地"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/gameyellow"
            android:textSize="@dimen/alphabet_size" />

        <TextView
            android:id="@+id/txtAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:maxLines="@integer/lines"
            android:text="具体动作"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gamered2"
            android:textSize="@dimen/btn_font_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="建议表演时间至少20秒，演员不可笑场"
        android:textColor="@color/GREEN" />

    <TextView
        android:id="@+id/txtLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/gamered" />

</RelativeLayout>