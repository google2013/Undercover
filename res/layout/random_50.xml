<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_bg" />

    <LinearLayout
        android:id="@+id/chengfa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" >

        <Button
            android:id="@+id/btn_punish"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="30"
            android:background="@drawable/pinkbtn1"
            android:text="@string/punishmen"
            android:textAlignment="viewStart"
            android:textColor="@color/WRITE"
            android:textSize="@dimen/size20" />

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_weight="30"
            android:background="@drawable/pinkbtn1"
            android:text="@string/restart"
            android:textColor="@color/WRITE"
            android:textSize="@dimen/size20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/imageBtnMain"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@color/bluebtn1"
            android:text="@string/clickme"
            android:textAlignment="center"
            android:textColor="@color/WRITE"
            android:textSize="@dimen/index" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageBtnMain"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="@string/lose" />

    </LinearLayout>

</RelativeLayout>