<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btnStart"
        android:layout_width="193dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_blue_pressed"
        android:text="@string/开始游戏"
        android:textColor="@color/WRITE"
        android:textSize="@dimen/newBtnFont" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/tem1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" >

            
            
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/参与人数"
                    android:textSize="@dimen/normalSize" />

                <SeekBar
                    android:id="@+id/seekPeople"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/labPeople"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/num4"
                    android:textSize="@dimen/normalSize" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/txtUnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/卧底人数"
                    android:textSize="@dimen/normalSize" />

                <SeekBar
                    android:id="@+id/seekUndercover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                     android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1" 
                    
                    />

                <TextView
                    android:id="@+id/labUndercover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/num4"
                    android:textSize="@dimen/normalSize" />

            </LinearLayout>
    </LinearLayout>

</RelativeLayout>