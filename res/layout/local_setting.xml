<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                 android:id="@+id/tem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/参与人数"
                    android:textSize="@dimen/normalSize" />

                <SeekBar
                    android:id="@+id/seekPeople"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/labPeople"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="@string/num4"
                    android:textSize="@dimen/normalSize" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/rowUndercover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                 android:id="@+id/tem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtUnd"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/卧底人数"
                    android:textSize="@dimen/normalSize" />

                <SeekBar
                    android:id="@+id/seekUndercover"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/labUndercover"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="@string/num4"
                    android:textSize="@dimen/normalSize" />

            </LinearLayout>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="193dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_blue_2x"
        android:text="@string/开始游戏"
        android:textColor="@color/WRITE"
        android:textSize="@dimen/newBtnFont" />

</RelativeLayout>