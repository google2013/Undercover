<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:alpha="20"
    android:background="@color/WRITE"
    android:padding="3dp" >

    <LinearLayout
        android:id="@+id/par"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageHelpIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:src="@drawable/bottle" />

        <LinearLayout
            android:id="@+id/td"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtHelpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="适合人数：4~8"
                android:textColor="@color/title1"
                android:textSize="@dimen/size20" />

            <TextView
                android:id="@+id/txtHelpContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="适合人数：4~8"
                android:textColor="@color/title2" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtHerlpOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:text="09/14/2013|万斌"
        android:textColor="@color/title2"
        android:textSize="@dimen/txtSmall12" />

</FrameLayout>